<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGoToHorizontalSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Horizontal Selection"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnGoToLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Go To TextView Loading"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnGoToCustomCalendarStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:text="Go To Custom Calendar (Standard)"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnGoToCustomCalendarBefore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Go To Custom Calendar (Before Current Day)"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnGoToCustomCalendarAfter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Go To Custom Calendar (Afeter Current Day)"
        tools:ignore="HardcodedText" />

</LinearLayout>