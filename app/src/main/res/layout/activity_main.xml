<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.albuquerque.customcomponents.widget.horizontalselection.HorizontalSelection
        android:id="@+id/horizontalSelection"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:hsSelectedItemColor="#1592E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHorizontalSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Force HorizontalSelection"
        app:layout_constraintTop_toBottomOf="@id/horizontalSelection"
        tools:ignore="HardcodedText" />

    <com.albuquerque.customcomponents.widget.loading.LoadingTextView
        android:id="@+id/loadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minWidth="95dp"
        android:text="R$ 20.056,04"
        android:textColor="#494A4D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnHorizontalSelection"
        app:ltvLoadingTint="#DEDEDE"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnLoadingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/loadingTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>