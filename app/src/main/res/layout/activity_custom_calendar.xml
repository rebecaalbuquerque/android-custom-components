<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomCalendarActivity">

    <com.albuquerque.customcalendar.CustomCalendar
        android:id="@+id/calendarBefore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:customCalendarAvailability="beforeCurrentDay"
        app:customCalendarType="range" />

    <com.albuquerque.customcalendar.CustomCalendar
        android:id="@+id/calendarAfter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:customCalendarAvailability="afterCurrentDay"
        app:customCalendarType="range" />

    <com.albuquerque.customcalendar.CustomCalendar
        android:id="@+id/calendarStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:customCalendarAvailability="all"
        app:customCalendarType="range" />

</androidx.constraintlayout.widget.ConstraintLayout>